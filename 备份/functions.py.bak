import asyncio

# 定义一个模拟获取天气信息的本地函数
async def get_current_weather(location, unit):
    # 模拟调用天气API返回固定的天气信息
    json_data = {
        "location": location,
        "temperature": 21,
        "unit": unit,
    }
    await asyncio.sleep(1)  # 模拟异步调用
    return f"It's 21 {unit} in {location}"

